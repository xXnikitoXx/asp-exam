@page
@model ErrorModel
@{
	ViewData["Title"] = "Грешка";
}

<main class="d-flex">
	<div class="container d-flex flex-column">
		<div class="row ">
			<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
				<div class="d-table-cell align-middle">
					<div class="text-center">
						<h1 class="display-1 font-weight-bold">@ViewData["Title"]</h1>
						<p class="h2 font-weight-normal mt-3 mb-4">Възникна грешка при обработването на заявката Ви!</p>
						<a href="/" class="btn btn-primary btn-lg"><i class="fas fa-home"></i> Обратно към сайта</a>
						@if (Model.ShowRequestId) {
							<p>
								<strong>ID на заявката:</strong> <code>@Model.RequestId</code>
							</p>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</main>