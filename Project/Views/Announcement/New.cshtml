@{
	ViewData["Title"] = "Добавяне на системно съобщение";
}

<div id="addAnnouncement" class="row">
	<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
		<div class="card">
			<div class="card-header text-center">
				<h3 id="title" class="title">@ViewData["Title"]</h3>
			</div>
			<div class="card-body">
				<div class="row mb-3">
					<div class="col-12">
						<label class="form-label">Заглавие</label>
						<input id="titleInput" type="text" class="form-control" placeholder="Заглавие">
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						<label class="form-label">Тип</label>
						<select id="typeInput" class="form-control mb-3">
							<option value="Primary">Основен</option>
							<option value="Secondary">Второстепенен</option>
							<option value="Success">Успех</option>
							<option value="Danger">Опасност</option>
							<option value="Warning">Внимание</option>
						</select>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						<label class="form-label">Съдържание</label>
						<textarea id="contentInput" class="form-control" rows="3"></textarea>
					</div>
				</div>
				<div class="text-center mt-3">
					<button onclick="TestAnnouncement();" class="btn btn-info"><i class="fas fa-eye"></i> Тестване</button>
				</div>
				<div class="text-center mt-3">
					<a href="/Admin/Announcements" class="btn btn-primary"><i class="fas fa-chevron-left"></i> Назад</a>
					<button onclick="AddAnnouncement();" class="btn btn-outline-success"><i class="fas fa-plus"></i> Добави</button>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="/js/announcement/test.js"></script>
<script src="/js/announcement/add.js"></script>