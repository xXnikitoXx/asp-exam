@using Project.Enums
@model PromoCodeViewModel
@{
	ViewData["Title"] = "Промо код " + Model.Code;
}

<div id="promoCodeDetails" class="row">
	<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
		<div class="card">
			<div class="card-header text-center">
				<h3 id="title" class="title">@ViewData["Title"]</h3>
				<h5 class="subtitle text-muted">Настройка на промо кода</h5>
			</div>
			<div class="card-body">
				<div class="row mb-3">
					<label class="form-label">Промо код</label>
					<div class="col-8">
						<input id="codeInput" type="text" class="form-control" placeholder="Код" asp-for="Code">
					</div>
					<div onclick="GenerateCode();" class="btn btn-success col-4">
						Генериране на код
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-6">
						<label class="form-label">Стойност</label>
						<input id="valueInput" type="number" step="0.01" min="0" class="form-control" placeholder="Стойност на кода" asp-for="Value">
					</div>
					<div class="col-6">
						<label class="form-label">Тип</label>
						<select id="typeInput" class="form-control mb-3" asp-for="Type">
							<option value="FixedAmount">Определена стойност</option>
							<option value="Percentage">Процент</option>
							<option value="PriceOverride">Презаписване на стойност</option>
							<option value="Free">Безплатно</option>
						</select>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-12">
						<label class="form-check m-0">
							<input id="activeCheck" type="checkbox" class="form-check-input" asp-for="IsValid">
							<span class="form-check-label">Активен</span>
						</label>
					</div>
				</div>
				<div class="text-center mt-3">
					<a href="/Admin/Codes" class="btn btn-primary"><i class="fas fa-chevron-left"></i> Назад</a>
					<a href="/Admin/Codes/Remove?Id=@Model.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Премахни кода</a>
					<button onclick="SaveCode();" class="btn btn-outline-success"><i class="fas fa-save"></i> Запази промените</button>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="/js/promoCode/generate.js"></script>
<script src="/js/promoCode/save.js"></script>